<div class="jumbotron text-center">
        <div class="overlay"></div>
        <div class="background-image"></div>
        <div class="caption">
            <h1>Saved Articles</h1>
            <p>Your Saved NBA Articles</p>
        </div>
    </div>
<div class="container-fluid article-container">
    {{#if savedArticle}}
    {{#each savedArticle}}
    <div class="card articleCard">
        <div class="card-header">
            <h3 class="title" data-id={{this._id}}>
                {{#if this.pic}}
                <img class="article-pic" src="{{this.pic}}" alt="No Image">
                {{/if}}
                <a href={{this.link}} class="article-link">
                    {{this.title}}
                </a>
                
            </h3>
        </div>
        <div class="card-body">
            <p class="summary">{{this.summary}}</p>
            <a class="btn btn-danger delete">
                Delete Article
            </a>
            <a class="btn btn-info comments">
                Leave Comment
            </a>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="card articleCard">
        <div class="card-header">
            You Have No Saved Articles
        </div>
    </div>
    {{/if}}

</div>
